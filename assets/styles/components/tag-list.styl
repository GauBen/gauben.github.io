.tag-list
  display flex
  flex-wrap wrap
  gap $gap-small
  margin-top auto
  padding-left 0
  list-style none

  > .tag
    $angle = -25deg
    display inline-block
    padding ($gap-small / 2) $gap-small
    background var(--almost-bg)
    border-radius $radius-normal
    transform skewX($angle)
    transition $timing-fast background-color

    > .span
      display inline-block
      transform skewX((- $angle))
