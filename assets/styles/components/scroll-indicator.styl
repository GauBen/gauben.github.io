.scroll-indicator
  position absolute
  right 0
  bottom 0
  left 0
  display none
  transition $timing-fast background-color, $timing-fast color

  &:hover
  &:focus-within
    color var(--bg)
    background-color var(--color)

  @media screen and (min-width $hero-min-width) and (min-height $scroll-indicator-min-height)
    display block

  > p > .link
    color inherit
    outline transparent

    &::before
      position absolute
      top 0
      right 0
      bottom 0
      left 0
      content ''
