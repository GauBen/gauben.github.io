// **** Colors ****
:root
  $box = #cdcfe6
  --bg #fff
  --almost-bg lighten($box, 40%)
  --box $box
  --color #333
  --link #1f47a8
  --shadow alpha(darken($box, 70%), 30%)
  --selection-bg #ff48
  --selection-color #333
  --prism-color #1c1b1d
  --prism-bg #fafaff
  --prism-function #0077bf
  --prism-keyword #5c33bd
  --prism-class #ab6000
  --prism-scalar #bd2a33
  --prism-string #4e7e06
  --prism-comment #355454

  &.-dark
    $box = #3d3d3e
    --bg #000
    --almost-bg darken($box, 40%)
    --box $box
    --color #ccc
    --link #6492dc
    --shadow alpha(lighten($box, 50%), 50%)
    --selection-bg #ff8a
    --selection-color #333
    --prism-color #dedfe3
    --prism-bg #1c1b1d
    --prism-function #6ed6ff
    --prism-keyword #c0a7fa
    --prism-class #faab50
    --prism-scalar #fa6973
    --prism-string #bdeb78
    --prism-comment #93a1a1
