._text-justify
  text-align justify

._dark
  --bg $color-dark-theme-bg
  --color $color-dark-theme-color
  --box $color-dark-theme-box
  --shadow $color-dark-theme-shadow
  --link $color-dark-theme-link

/* stylelint-disable rscss/no-descendant-combinator */
._beautiful-links a
a._beautiful-link
  $line = 1px
  display inline
  padding-bottom 2 * $line
  color var(--link)
  text-decoration none
  background-image linear-gradient(var(--link), var(--link)), linear-gradient(var(--link), var(--link))
  background-repeat no-repeat, no-repeat
  background-position bottom left, bottom right
  background-size 100% $line, 0% (2 * $line)
  transition $timing-fast color, $timing-fast background-size

  &:hover
    background-position bottom left, bottom left
    background-size 100% $line, 100% (2 * $line)

  &:focus
  &:active
    color var(--bg)
    background-position bottom left, bottom left
    background-size 100% 100%, 0% (2 * $line)
    outline none

._flex-center
  display flex
  align-items center
  justify-content center

._text-inherit
  color inherit
  font inherit
  text-decoration inherit

._sticky-wrapper
  @media screen and (prefers-reduced-motion no-preference)
    > :first-child
      z-index 10
      transition $timing-fast

  @media (min-width $max-width-container * 2.1)
    position absolute
    top 0
    right 0
    bottom 0
    left 0
    width 0

    > :first-child
      position sticky
      top $gap-large
      width 0.5 * $max-width-container
      transform translateX(($max-width-container / 2))

    &.-left > :first-child
      transform s('translateX(calc(-100% - %s / 2 - %s))', $max-width-container, $gap-normal)
