@require 'normalize.css/normalize.css'

// **** Margins and paddings ****
$gap-small = 1rem
$gap-normal = 2rem
$gap-large = 3rem
$gap-huge = 6rem
// **** Sizes ****
$min-width-project-card = 48rem
$height-project-card-image = 25rem
$max-width-container = 80rem
$max-width-container-large = ($min-width-project-card * 3 + $gap-normal * 4)
// **** Radii ****
$radius-small = 0.25rem
$radius-normal = 0.5rem
$radius-large = 1rem
// **** Colors ****
// Light theme
$color-light-theme-bg = #fff
$color-light-theme-color = #333
$color-light-theme-box = #ccc
$color-light-theme-shadow = #0008
$color-light-theme-link = #1f47a8
// Dark theme
$color-dark-theme-bg = #000
$color-dark-theme-color = #ccc
$color-dark-theme-box = #333
$color-dark-theme-shadow = #ccc8
$color-dark-theme-link = #6492dc
// **** Timings ****
$timing-fast = 0.2s
$timing-normal = 0.5s
$timing-slow = 2s
// **** Splash animation settings ****
$hero-min-width = 40em
$hero-duration = $timing-slow
$hero-font-size = 8rem
$scroll-indicator-min-height = 26rem
// **** Shadows ****
$shadow-small = 0 1px 3px
// **** Fonts ****
$sans-serif = -apple-system, 'BlinkMacSystemFont', 'Segoe UI', 'Roboto', 'Oxygen-Sans', 'Ubuntu', 'Cantarell', 'Helvetica Neue', sans-serif

@require 'design/reset.styl'
@require 'design/helpers.styl'
@require 'design/components/*.styl'
@require 'prism-themes/themes/prism-material-light.css'
