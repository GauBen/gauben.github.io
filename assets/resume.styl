$white = #fff
$pale = #9bcfba
$dark = #9d2503
$black = #000

/* stylelint-disable */
*
*::before
*::after
  box-sizing inherit

:root
  box-sizing border-box
  min-height 100%
  font-size 0.4375em

body
  display flex
  min-height 100vh
  margin 0
  color $black
  font-size 2rem
  font-family 'Segoe UI', sans-serif
  line-height 1.5
  background-color $white

  > .left
    flex-grow 1
    flex-shrink 1
    background $pale

  > .right
    flex-grow 1
    flex-shrink 1
    background $white

a
  color inherit
  text-decoration inherit

svg
img
  vertical-align text-bottom

aside
  max-width 34rem
  padding 2rem 2rem 3rem
  background-color $pale
  box-shadow 0 0 1rem $pale

  :lang(en) &
    padding-top 22rem

  p
    margin 1rem 0

  hr
    width 3rem
    margin 5rem auto
    border 1px solid $black
    border-radius 1px

  svg
    width 24px
    height 16px
    margin-right 1rem
    fill currentColor

  .icon
    display flex
    align-items center

    p
      margin 0

    svg
      width 24px
      height 24px
      margin-right 1rem

main
  flex-basis calc(21cm - 34rem)
  flex-grow 1
  flex-shrink 1
  max-width @flex-basis
  padding 1rem 2rem

  h1
    margin 2rem 0 0
    font-size 4rem
    text-align center

  h2
    margin-bottom 1rem
    border-bottom 1px solid $dark
    border-radius 3px

  table
    width 100%
    text-align center
    table-layout fixed
    border-collapse collapse

.skill-tag
  display inline-block
  margin 0.5rem 0.2rem
  margin-left 0.8rem
  padding 0.4rem 1.2rem
  color $white
  text-align center
  background $dark
  border-radius 4px
  transform skewX(-20deg)

  + .skill-tag
    margin-left 0.2rem

  > .text
    display inline-block
    transform skewX(20deg)

.skill-star
  width 2rem
  height 2rem
  margin 0.5rem 0
  fill $dark

.subtitle
  margin-top 0
  margin-bottom 2rem
  font-size 3rem
  text-align center

.center
  text-align center

.justify
  text-align justify

.punchline
  display inline-block
  margin 0
  padding 0.5rem 5rem
  color $white
  font-size 2rem
  text-align center
  background $dark
  border-radius 4px
  transform skewX(-30deg)

  span
    display inline-block
    transform skewX(30deg)

.dense
  > ul
  > p
    margin-top 2rem
    margin-bottom 0

  > ul + p
  > p + ul
  > p + p
    margin-top 0

.profile-pic
  width 26rem
  height 26rem
  margin 1rem 2rem 2rem
  border-radius 50%
  box-shadow 0 0 2rem darken($pale, 10)
