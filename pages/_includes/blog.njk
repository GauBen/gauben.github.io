layout: parts/html.njk
---

<div class="markdown-body section-container _beautiful-links _text-justify">
  <h1>{{ title }}</h1>
  <ol>
    {% for post in posts %}
      <li>
        <a href="{{ post.url | url }}">{{ post.data.title }}</a>
      </li>
    {% endfor %}
  </ol>
  <div class="_center">
    {% if pagination.href.previous %}
      <a href="{{ pagination.href.previous | url }}">Page précedente</a> ·
    {% endif %}
    <strong>{{ pagination.pageNumber + 1 }}</strong> / {{ pagination.pages.length }}
    {% if pagination.href.next %}
      · <a href="{{ pagination.href.next | url }}">Page suivante</a>
    {% endif %}
  </div>
</div>
