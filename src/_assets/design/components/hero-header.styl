.hero-header
  position relative
  display flex
  flex-direction column
  align-items center
  justify-content center
  min-height $gap-small
  padding $gap-huge 0
  overflow hidden
  text-align center

  @media screen and (prefers-reduced-motion: no-preference)
    transition $timing-normal min-height

  @media screen and (min-width: $hero-min-width)
    min-height 100vh

@media screen and (min-width: $hero-min-width) and (prefers-reduced-motion: no-preference)
  /* stylelint-disable rscss/no-descendant-combinator */
  ._js-do-splash .hero-header > .fade
    animation $hero-duration splash-fade

@keyframes splash-fade
  0%
  80%
    opacity 0
