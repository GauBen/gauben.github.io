{
  "name": "gauben.github.io",
  "version": "1.0.0",
  "description": "Personal portfolio",
  "repository": "git@github.com:GauBen/gauben.github.io.git",
  "author": "Gautier Ben AÃ¯m <benaim.gautier@gmail.com>",
  "license": "MIT",
  "browserslist": "defaults",
  "scripts": {
    "start": "yarn build && npm-run-all --parallel watch:*",
    "watch:eleventy": "eleventy --serve --output=_pre-dist",
    "watch:parcel": "parcel '_pre-dist/**/*.html' --dist-dir _dist --cache-dir _cache --no-source-maps",
    "clean": "rimraf ./_dist ./_pre-dist",
    "build": "yarn clean && yarn build:eleventy && yarn build:parcel",
    "build:eleventy": "eleventy --output=_pre-dist",
    "build:parcel": "parcel build '_pre-dist/**/*.html' --dist-dir _dist --cache-dir _cache --no-source-maps",
    "test": "yarn test:styl && yarn test:ts && echo ':)'",
    "test:styl": "stylelint './assets/**/*.styl' --custom-syntax stylelint-plugin-stylus/custom-syntax --fix",
    "test:ts": "eslint './assets/**/*.ts' '.eleventy.js' --fix",
    "preview": "yarn build && yarn serve --no-clipboard _dist"
  },
  "staticFiles": {
    "distDir": "_dist"
  },
  "devDependencies": {
    "@11ty/eleventy": "gauben/eleventy",
    "@11ty/eleventy-plugin-syntaxhighlight": "^3.1.0",
    "@parcel/packager-raw-url": "2.0.0-beta.2",
    "@parcel/transformer-image": "2.0.0-beta.2",
    "@parcel/transformer-stylus": "2.0.0-beta.2",
    "@parcel/transformer-webmanifest": "2.0.0-beta.2",
    "@typescript-eslint/eslint-plugin": "^4.22.0",
    "@typescript-eslint/parser": "^4.22.0",
    "eslint": "^7.24.0",
    "eslint-config-standard": "^16.0.2",
    "eslint-plugin-html": "^6.1.2",
    "eslint-plugin-import": "^2.22.1",
    "eslint-plugin-node": "^11.1.0",
    "eslint-plugin-promise": "^5.1.0",
    "normalize.css": "^8.0.1",
    "npm-run-all": "^4.1.5",
    "parcel": "^2.0.0-beta.2",
    "parcel-reporter-static-files-copy": "^1.2.2",
    "rimraf": "^3.0.2",
    "serve": "^11.3.2",
    "stylelint": "^13.12.0",
    "stylelint-config-rational-order": "^0.1.2",
    "stylelint-config-standard": "^21.0.0",
    "stylelint-order": "^4.0.0",
    "stylelint-plugin-stylus": "^0.10.0",
    "stylelint-rscss": "^0.4.0",
    "typescript": "^4.2.4"
  }
}
