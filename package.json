{
  "name": "gauben.github.io",
  "version": "2.0.0",
  "description": "Personal portfolio",
  "repository": "git@github.com:GauBen/gauben.github.io.git",
  "author": "Gautier Ben AÃ¯m <benaim.gautier@gmail.com>",
  "license": "MIT",
  "type": "commonjs",
  "scripts": {
    "start": "yarn clean && yarn build:eleventy && npm-run-all --parallel 'watch:*'",
    "watch:eleventy": "eleventy --watch",
    "watch:parcel": "parcel '.pre-dist/**/*.{html,xml}' --dist-dir .dist",
    "clean": "rimraf ./.dist ./.pre-dist",
    "build": "yarn clean && yarn build:eleventy && yarn build:parcel",
    "build:eleventy": "eleventy",
    "build:parcel": "PARCEL_WORKERS=0 parcel build '.pre-dist/**/*.{html,xml}' --dist-dir .dist --no-source-maps --detailed-report 0",
    "test": "yarn test:stylelint && yarn test:eslint && echo ':)'",
    "test:stylelint": "stylelint './assets/**/*.styl' --custom-syntax stylelint-plugin-stylus/custom-syntax --fix",
    "test:eslint": "eslint './assets/**/*.ts' './pages/**/*.cjs' './.eleventy.js' --fix",
    "preview": "yarn build && serve -n .dist"
  },
  "devDependencies": {
    "@11ty/eleventy": "^1.0.0-canary.23",
    "@11ty/eleventy-navigation": "^0.2.0",
    "@11ty/eleventy-plugin-rss": "^1.1.1",
    "@11ty/eleventy-plugin-syntaxhighlight": "^3.1.1",
    "@parcel/optimizer-data-url": "2.0.0-beta.2",
    "@parcel/packager-raw-url": "2.0.0-beta.2",
    "@parcel/transformer-image": "2.0.0-beta.2",
    "@parcel/transformer-inline-string": "2.0.0-beta.2",
    "@parcel/transformer-stylus": "2.0.0-beta.2",
    "@parcel/transformer-webmanifest": "2.0.0-beta.2",
    "@traptitech/markdown-it-katex": "^3.4.3",
    "@typescript-eslint/eslint-plugin": "^4.25.0",
    "@typescript-eslint/parser": "^4.25.0",
    "@yarnpkg/pnpify": "^3.0.0-rc.3",
    "eslint": "^7.27.0",
    "eslint-config-prettier": "^8.3.0",
    "eslint-plugin-prettier": "^3.4.0",
    "eslint-plugin-unicorn": "^32.0.1",
    "luxon": "^1.27.0",
    "markdown-it": "^12.0.6",
    "markdown-it-anchor": "^7.1.0",
    "markdown-it-footnote": "^3.0.3",
    "markdown-it-image-lazy-loading": "^1.1.0",
    "markdown-it-implicit-figures": "^0.10.0",
    "markdown-it-multimd-table": "^4.1.0",
    "markdown-it-task-lists": "^2.1.1",
    "markdown-it-toc-done-right": "^4.2.0",
    "mermaid": "^8.10.1",
    "normalize.css": "^8.0.1",
    "npm-run-all": "^4.1.5",
    "parcel": "2.0.0-beta.2",
    "parcel-reporter-static-files-copy": "^1.3.0",
    "prettier": "^2.3.0",
    "prism-themes": "^1.7.0",
    "pupa": "^2.1.1",
    "rimraf": "^3.0.2",
    "serve": "^11.3.2",
    "stylelint": "^13.13.1",
    "stylelint-config-rational-order": "^0.1.2",
    "stylelint-config-standard": "^22.0.0",
    "stylelint-plugin-stylus": "^0.10.0",
    "stylelint-rscss": "^0.4.0",
    "typescript": "^4.3.2",
